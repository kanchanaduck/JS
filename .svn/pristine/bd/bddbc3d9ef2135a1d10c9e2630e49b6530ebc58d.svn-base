<div *ngFor="let item of items">
    <h1 mat-dialog-title>{{ headers }}</h1>

    <input matInput [(ngModel)]="item.model_code" #model_code style="visibility: hidden;">

    <div class="row">
        <div class="col-12">
            <mat-form-field hintLabel="Max 20 characters">
                <mat-label>Detail: </mat-label>
                <input matInput [(ngModel)]="item.model_detail" #model_detail required maxlength="20">
                <mat-hint align="end">{{item.model_detail?.length || 0}}/20</mat-hint>
            </mat-form-field>
        </div>
        <div class="col-12 pt-4">
            <mat-form-field hintLabel="Max 400 characters">
                <mat-label>Model Child: </mat-label>
                <input matInput [(ngModel)]="item.model_child" #model_child required maxlength="400">
                <mat-hint align="end">{{item.model_child?.length || 0}}/400</mat-hint>
            </mat-form-field>
        </div>
        <div class="col-12 pt-1">
            <h6 class="text-danger">ถ้ามี Child มากกว่า 1 ค่า ให้ใส่ "," คั่นมาด้วย</h6>
        </div>
    </div>

    <div class="row pt-3">
        <div class="col-2 offset-8"><button mat-button mat-dialog-close>No Thanks</button></div>
        <div class="col-2">
            <button mat-raised-button class="bg-0f4289" mat-dialog-close (click)="submit(button,item)">{{ button }}</button>
        </div>
    </div>
</div>