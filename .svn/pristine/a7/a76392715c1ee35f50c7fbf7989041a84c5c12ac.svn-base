<div *ngFor="let item of items">
    <h1 mat-dialog-title>{{ headers }}</h1>
    
    <div class="row">
        <div class="col-12">
            <mat-form-field hintLabel="Max 2 characters">
                <mat-label>Code: </mat-label>
                <input matInput [(ngModel)]="item.block_group_code" #block_group_code required  maxlength="2">
                <mat-hint align="end">{{item.block_group_code?.length || 0}}/2</mat-hint>
            </mat-form-field>
        </div>
    </div>
<br>
    <div class="row">
        <div class="col-12">
            <mat-form-field hintLabel="Max 20 characters">
                <mat-label>Detail: </mat-label>
                <input matInput [(ngModel)]="item.block_group_detail" #block_group_detail required  maxlength="20">
                <mat-hint align="end">{{item.block_group_detail?.length || 0}}/20</mat-hint>
            </mat-form-field>
        </div>
    </div>

    <div class="row">
        <div class="col-2 offset-8"><button mat-button mat-dialog-close>No Thanks</button></div>
        <div class="col-2">
            <button mat-raised-button class="bg-0f4289" mat-dialog-close
                (click)="submit(button,item)">{{ button }}</button>
        </div>
    </div>
</div>